#!/usr/bin/env ruby
require "rubygems"
require "thor/group"

class Simple_gemset < Thor::Group                                                                                 
  include Thor::Actions                      
  
  desc "Generate a .rvmrc file in the current directory:\n" +
       "   simple_gemset [gemset_name] [--ruby]"
  
  argument :gemset, :type => :string, :default => File.basename(Dir.getwd)
  
  class_option :ruby, :type => :boolean, :default => false, :desc => 'Display the list of rubies as options.'  
  
  def one                 
    ruby_options = [
        'ruby-1.8.6-p420',
        'ruby-1.8.6-head',  
        'ruby-1.8.7-p352',
        'ruby-1.8.7-head',  
        'ruby-1.9.1-p378',
        'ruby-1.9.1-p431',
        'ruby-1.9.1-head',
        'ruby-1.9.2-p180',
        'ruby-1.9.2-p290',
        'ruby-1.9.2-head', 
        'ruby-1.9.3-preview1',
        'ruby-1.9.3-head',
        'ruby-head',
        'goruby',
        'jruby-1.2.0',
        'jruby-1.3.1',
        'jruby-1.4.0',
        'jruby-1.6.1',
        'jruby-1.6.2',
        'jruby-1.6.2',
        'jruby-1.6.3',
        'jruby-head',
        'rbx-1.0.1',
        'rbx-1.1.1',
        'rbx-1.2.3',
        'rbx-1.2.4',
        'rbx-head',
        'rbx-2.0.0pre',
        'ree-1.8.6',
        'ree-1.8.7-2011.03',
        'ree-1.8.6-head',
        'ree-1.8.7-head',
        'kiji',
        'maglev-26231',
        'maglev-head',
        'macruby-0.10',
        'macruby-nightly',
        'macruby-head'                
      ]                    
      
    if ENV['testing']
      rvmrc_path = 'spec/rvmrc'
    else        
      rvmrc_path = '.rvmrc'    
    end
          
    if options[:ruby]              
      say('Choose which Ruby version do you want to use')  unless ENV['testing']
      ruby_options.each_index { |i| puts i.to_s+': '+ ruby_options[i] } unless ENV['testing']                                                                                                                            
                   
      ruby_option = 7
      if not ENV['testing']
        ruby_option = ask('Which ruby? Just tell me the number: ')                                                                                                                                     
      end
            
      create_file(rvmrc_path) do  
        "# Generated with Simple_gemset \n" + 
        "rvm use '#{ruby_options[ruby_option.to_i]}'\n" +
        "rvm gemset create '#{gemset}'\n" +
        "rvm gemset use '#{gemset}'"
      end
    else                                                                                                                                       
      create_file(rvmrc_path) do           
        "# Generated with Simple_gemset \n" +
        "rvm gemset create '#{gemset}'\n" +
        "rvm gemset use '#{gemset}'"
      end
    end
  end                                                                                                  
end

Simple_gemset.start 